<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context="com.aprendamosjapones.aprendedamosjapones.View.MainMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/logoMain"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:paddingTop="10dp"
                android:background="@drawable/onigiri1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="NIveles"
                android:textSize="20dp"
                android:paddingTop="50dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <Button
                android:id="@+id/hiraganaLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hiragana"/>

            <Button
                android:id="@+id/kataLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Katakana"/>

            <Button
                android:id="@+id/kanjiLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kanji "/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:paddingTop="30dp">

            <TextView
                android:id="@+id/juegos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juegos"
                android:textSize="20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/juegoPreguntados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preguntados"/>

            <Button
                android:id="@+id/juegoConcentrese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Concentrese"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:paddingTop="30dp">

            <TextView
                android:id="@+id/diccionarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diccionarios"
                android:textSize="20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/hiraganaDiccionario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hiragana"/>

            <Button
                android:id="@+id/katakanaDicionario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Katakana"/>

            <Button
                android:id="@+id/kanjiDiccionario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kanji " />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
