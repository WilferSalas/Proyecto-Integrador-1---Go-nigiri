<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/PictureCard"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_cardview"
    cardview:cardCornerRadius="@dimen/cornerradius_cardview"
    tools:context="com.aprendamosjapones.aprendedamosjapones.View.ContainerActivity">

    <FrameLayout
        android:id="@+id/userLevel1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_cardview"
            android:background="@drawable/japan"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:paddingBottom="@dimen/cardview_paddingBottom"
            android:paddingLeft="@dimen/cardview_paddingLeft"
            >

            <TextView
                android:id="@+id/japanese_levelCard1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cardview_level1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/cardview_textsize"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/japanese_levelCardInformation1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aca va la informacion del contenido del nivel"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/cardview_textsize_Information"
                    />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>