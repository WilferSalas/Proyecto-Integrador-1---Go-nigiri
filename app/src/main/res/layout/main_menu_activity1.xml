<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context="com.aprendamosjapones.aprendedamosjapones.View.MainMenuActivity"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/logoMain"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:paddingTop="10dp"
                android:background="@drawable/onigiri1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Niveles"
                android:textSize="25dp"
                android:paddingTop="35dp"
                android:textColor="#4779cc"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <Button
                android:id="@+id/hiraganaLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hiragana"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="#00796B"
                android:background="@drawable/button"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="9dp"
                />

            <Button
                android:id="@+id/kataLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Katakana"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="#00796B"
                android:background="@drawable/button"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="9dp"
                />

            <Button
                android:id="@+id/kanjiLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kanji"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="#00796B"
                android:background="@drawable/button"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="9dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:paddingTop="30dp">

            <TextView
                android:id="@+id/juegos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juegos"
                android:textSize="25dp"
                android:textColor="#4779cc"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/juegoPreguntados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preguntados"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="#00796B"
                android:background="@drawable/button"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />

            <Button
                android:id="@+id/juegoConcentrese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Concentrese"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="#00796B"
                android:background="@drawable/button"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:paddingTop="30dp">

            <TextView
                android:id="@+id/diccionarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diccionarios"
                android:textSize="25dp"
                android:textColor="#4779cc"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/hiraganaDiccionario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hiragana"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="#00796B"
                android:background="@drawable/button"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />

            <Button
                android:id="@+id/katakanaDicionario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Katakana"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="#00796B"
                android:background="@drawable/button"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />

            <Button
                android:id="@+id/kanjiDiccionario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kanji"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="#00796B"
                android:background="@drawable/button"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>