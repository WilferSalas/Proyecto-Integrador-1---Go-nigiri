<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Games.memory.MenuMemoryActivity">

    <TextView
        android:id="@+id/text_hiragana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center_horizontal"
        android:text="@string/hiragana" />

    <Button
        android:id="@+id/button_hiragana_1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/button_1" />

    <Button
        android:id="@+id/button_hiragana_2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/button_2" />


    <TextView
        android:id="@+id/text_katakana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center_horizontal"
        android:text="@string/katakana" />

    <Button
        android:id="@+id/button_katakana_1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/button_1" />

    <Button
        android:id="@+id/button_katakana_2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/button_2" />

</LinearLayout>
