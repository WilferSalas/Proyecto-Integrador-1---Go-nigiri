<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aprendamosjapones.aprendedamosjapones">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".View.MainMenuActivity"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Games.MemoryGame.memory.MenuMemoryActivity"
            android:screenOrientation="userPortrait"
            android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>
        <activity
            android:name=".Games.MemoryGame.memory.MemoryActivity"
            android:screenOrientation="userLandscape"
            android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>
        <activity android:name=".HiraganaLevels.HiraganaLevelsActivity"></activity>
        <activity android:name=".KatakanaLevels.KatakanaLevelsActivity"></activity>
        <activity android:name=".KanjiLevels.KanjiLevelsActivity"></activity>
        <activity android:name=".Games.MemoryGame.IntructionMemoryGame"
            android:screenOrientation="userPortrait"
            android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>
        <activity
            android:name=".HiraganaLevels.HiraganaDetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName=".HiraganaLevels.HiraganaLevelsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aprendamosjapones.aprendedamosjapones.HiraganaLevels.HiraganaDetailActivity">
            </meta-data>
        </activity>

        <activity
            android:name=".KatakanaLevels.KatakanaDetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName=".KatakanaLevels.KatakanaLevelsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aprendamosjapones.aprendedamosjapones.KatakanaLevels.KatakanaLevelsActivity">
            </meta-data>
        </activity>
        <activity
            android:name=".KanjiLevels.KanjiDetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName=".KanjiLevels.KanjiLevelsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aprendamosjapones.aprendedamosjapones.KanjiLevels.KanjiDetailActivity" >
            </meta-data>
        </activity>

        <activity android:name=".DictionaryHIragana.DictionarHIraganaActivity"
            android:label="Regresar a inicio"
            android:parentActivityName=".View.MainMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DictionaryHIragana.DictionarHIraganaActivity">
            </meta-data>
        </activity>

        <activity
            android:name=".DictionaryHIragana.DetailsDictionaryHiragana"
            android:label="Regresar a diccionarios"
            android:parentActivityName=".DictionaryHIragana.DictionarHIraganaActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DictionaryHIragana.DetailsDictionaryHiragana">
            </meta-data>
        </activity>

        <activity
            android:name=".DictionaryKatakana.DictionarKatakanaActivity"
            android:label="Regresar a inicio"
            android:parentActivityName=".View.MainMenuActivity">>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DictionaryKatakana.DictionarKatakanaActivity">
            </meta-data>
        </activity>
        <activity
            android:name=".DictionaryKatakana.DetailsDictionaryKatakana"
            android:label="Regresar a diccionarios"
            android:parentActivityName=".DictionaryKatakana.DictionarKatakanaActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DictionaryKatakana.DetailsDictionaryKatakana">
            </meta-data>
        </activity>

        <activity
            android:name=".DictionaryKanji.DictionarKanjiActivity"
            android:label="Regresar a inicio"
            android:parentActivityName=".View.MainMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DictionaryKanji.DictionarKanjiActivity">
            </meta-data>
        </activity>
        <activity android:name=".DictionaryKanji.DetailsDictionaryKanji"
            android:label="Regresar a diccionarios"
            android:parentActivityName=".DictionaryKatakana.DictionarKatakanaActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DictionaryKanji.DetailsDictionaryKanji">
            </meta-data>
        </activity>

        <activity android:name=".Games.MemoryGame.matching.InstructionsMatchit"
            android:screenOrientation="userPortrait"
            android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>
        <activity android:name=".Games.MemoryGame.matching.MenuMatchit"
            android:screenOrientation="userPortrait"
            android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>

        <activity android:name=".View.CreditsActivity"></activity>

    </application>
</manifest>